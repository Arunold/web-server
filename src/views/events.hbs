<div>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Description</th>
                <th>Location</th>
                <th>Date</th>
                <th>Likes</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {{#events}}
            <tr>
                <td>{{id}}</td>
                <td>{{ title }}</td>
                <td>{{ description }}</td>
                <td>{{ location }}</td>
                <td>{{ date }}</td>
                <td>{{likes}}</td>
                <td>
                    <form action="/event/like" method="post">
                        <input style="display: none;" name="id" value="{{id}}">
                        <button type="submit">Like</button>
                    </form>
                </td>
            </tr>
            {{/events}}
        </tbody>
    </table>
</div>
<div id="event-form-container">
    <div>
        <h2>Add an event</h2>
    </div>
    <form action="/event" method="post">
        <div>
            <div>
                <label for="title">Title:</label>
            </div>
            <div>
                <input id="title" name="title" type="text" placeholder="Event Title" />
            </div>
        </div>
        <div>
            <div>
                <label for="description">Description:</label>
            </div>
            <div>
                <input id="description" name="description" type="text" placeholder="Event Description" />
            </div>
        </div>
        <div>
            <div>
                <label for="location">Location:</label>
            </div>
            <div>
                <input id="location" name="location" type="text" placeholder="Event Location" />
            </div>
        </div>
        <div>
            <input type="submit" name="submit" value="submit" />
        </div>
    </form>
</div>